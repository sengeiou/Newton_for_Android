<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_weight="0.56"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/countmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/withdraw_alert"
            android:textColor="@color/graydarktext" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/graydark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/withdrawal_amount"
                android:textColor="@color/graydarktext" />

            <EditText
                android:id="@+id/withdraw_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/security_code"
                android:textColor="@color/graydarktext" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/withdraw_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.57"
                    android:ems="10"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/withdraw_verification_bt"
                    android:layout_width="66dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="2.02"
                    android:background="@drawable/bg_head"
                    android:text="@string/get_security_code"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/alipay"
                android:textColor="@color/graydarktext" />

            <EditText
                android:id="@+id/withdraw_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:singleLine="true" />

            <Button
                android:id="@+id/withdraw_bt"
                android:layout_width="184dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:background="@drawable/bg_head"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="20dip"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="10dip"
            android:background="@color/graydark" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/graydark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/statement"
            android:textColor="@color/graydarktext"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/withdraw_text"
            android:textColor="@color/graydarktext" />
    </LinearLayout>

</LinearLayout>